---
interface FAQItem {
  question: string;
  answer: string;
}

interface HowToStep {
  name: string;
  text: string;
}

interface EnhancedContentData {
  title: string;
  summary: string;
  author: string;
  pubDate: Date;
  tags: string[];
  type: string;
  featured: boolean;
  
  // SEO fields
  metaDescription?: string;
  focusKeywords?: string[];
  
  // GEO fields
  faqSections?: FAQItem[];
  howToSteps?: HowToStep[];
  
  // Schema type
  schemaType?: 'Article' | 'HowTo' | 'FAQPage';
  
  // E-E-A-T signals
  authorCredentials?: string[];
  sources?: string[];
}

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogUrl?: string;
  contentData?: EnhancedContentData;
}

const { 
  title, 
  description = "MMC Financial - 马来西亚领先的财务规划与预算管理专家",
  ogImage = "/images/contact/MMCOffice.webp",
  ogUrl = Astro.url.href,
  contentData
} = Astro.props;

// Generate content-specific schema markup
const generateContentSchema = (data: EnhancedContentData) => {
  const baseSchema = {
    "@context": "https://schema.org",
    "@type": data.schemaType || "Article",
    "headline": data.title,
    "description": data.metaDescription || data.summary,
    "author": {
      "@type": "Person",
      "name": data.author,
      ...(data.authorCredentials && { "jobTitle": data.authorCredentials.join(", ") })
    },
    "datePublished": data.pubDate.toISOString(),
    "dateModified": data.pubDate.toISOString(),
    "publisher": {
      "@type": "Organization",
      "name": "MMC Financial",
      "logo": {
        "@type": "ImageObject",
        "url": "https://mmcfin.com/MMCFavicon.png"
      }
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": ogUrl
    },
    "keywords": data.focusKeywords?.join(", ") || data.tags.join(", ")
  };

  // Add FAQ schema if present
  if (data.faqSections && data.faqSections.length > 0) {
    return {
      ...baseSchema,
      "@type": "FAQPage",
      "mainEntity": data.faqSections.map(faq => ({
        "@type": "Question",
        "name": faq.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": faq.answer
        }
      }))
    };
  }

  // Add HowTo schema if present
  if (data.howToSteps && data.howToSteps.length > 0) {
    return {
      ...baseSchema,
      "@type": "HowTo",
      "name": data.title,
      "step": data.howToSteps.map((step, index) => ({
        "@type": "HowToStep",
        "position": index + 1,
        "name": step.name,
        "text": step.text
      }))
    };
  }

  return baseSchema;
};

import '../styles/globals.css';
import 'aos/dist/aos.css';
import PerformanceSeo from '../components/seo/PerformanceSeo.astro';
