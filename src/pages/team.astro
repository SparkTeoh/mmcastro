---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import AboutTeam from '../components/AboutTeam.astro';
import CallToAction from '../components/CallToAction.astro';


// Leadership team data
const leadershipTeam = [
  {
    name: "PC Lim",
    role: "Advisor and Former Shareholder",
    image: "/images/about-us/team/PC Lim.webp",
    social: {
      enable: true,
      list: [
        {
          enable: true,
          label: "LinkedIn",
          icon: "/images/icons/svg/linkedin.svg",
          url: "https://www.linkedin.com/"
        }
      ]
    }
  },
  {
    name: "Phillip Tay",
    role: "License Director",
    image: "/images/about-us/team/Phillip Tay.webp",
    social: {
      enable: true,
      list: [
        {
          enable: true,
          label: "LinkedIn",
          icon: "/images/icons/svg/linkedin.svg",
          url: "https://www.linkedin.com/"
        }
      ]
    }
  },
  {
    name: "Spark Liang",
    role: "Managing Director",
    image: "/images/about-us/team/Spark.webp",
    social: {
      enable: true,
      list: [
        {
          enable: true,
          label: "LinkedIn",
          icon: "/images/icons/svg/linkedin.svg",
          url: "https://www.linkedin.com/"
        },
        {
          enable: true,
          label: "Twitter",
          icon: "/images/icons/svg/twitter.svg",
          url: "https://twitter.com/"
        }
      ]
    }
  }
];
---

<Layout title="团队介绍 - MMC FP Sdn Bhd" description="认识我们的专业团队，他们致力于为客户提供卓越的金融服务和解决方案。">
  <Navigation />

  <!-- Executive Leadership Section -->
  <section class="leadership-section">
    <div class="container">
      <div class="grid place-items-stretch gap-10 lg:grid-cols-2">
        <div class="flex flex-wrap items-center justify-between gap-6 overflow-x-hidden lg:flex-nowrap">
          <div class="lg:max-w-2xl" data-aos="fade-right-sm">
            {/* Subtitle */}
            <span class="bg-primary/5 border-secondary text-primary mb-2.5 inline-block rounded-full border px-5 py-px">
              领导团队
            </span>
            {/* Main Title */}
            <h2 class="text-h3 text-inherit">
              高管领导与管理
            </h2>
            {/* Description */}
            <p class="mt-6">
              我们组织的核心是一支敬业且经验丰富的领导团队，他们以热情和专业推动我们的使命向前发展。
            </p>
            {/* Quote */}
            <blockquote class="border-primary mt-5 max-w-xl border-l py-1 pl-5">
              <p class="opacity-70">
                与我们合作，获得定制化的商业解决方案，提升您的企业绩效并确保长期成功
              </p>
              <p class="mt-3 text-xs">
                - John C. Maxwell
              </p>
            </blockquote>
          </div>
        </div>
        
        {/* Leadership Team Cards */}
        <div class="grid gap-6 md:grid-cols-2 md:grid-rows-2 md:place-items-center">
          {leadershipTeam.map((member, index) => (
            <div 
              class={`group after:from-primary/80 after:via-primary/30 to-primary/0 relative overflow-hidden rounded-xl via-10% after:absolute after:inset-0 after:z-10 after:bg-gradient-to-t after:transition-opacity ${index === 0 ? 'md:row-span-2' : ''}`}
              data-aos="fade-up-sm"
              data-aos-delay={index * 100}
            >
              <img
                src={member.image}
                alt={member.name}
                class={`w-full rounded-xl object-cover ${index === 0 ? '!h-[25.25rem]' : '!h-[20rem]'}`}
              />
              <div class="absolute bottom-0 left-0 z-20 w-full p-8 text-white transition-all duration-300 md:-bottom-14 group-hover:md:bottom-0">
                <h3 class="text-lg/snug text-inherit opacity-90">{member.name}</h3>
                <p class="mt-2 text-sm text-inherit opacity-90">{member.role}</p>
                {member.social && member.social.enable && (
                  <ul class="z-20 mt-6 flex gap-4 transition-all duration-300 md:opacity-0 md:group-hover:opacity-100">
                    {member.social.list.map((social) => (
                      <li>
                        <a
                          aria-label={social.label}
                          href={social.url}
                          target="_blank"
                          rel="noopener noreferrer nofollow"
                          class="group/link relative flex h-5 w-5 items-center justify-center transition duration-300"
                        >
                          <span class="sr-only">{social.label}</span>
                          {social.icon && (
                            <img
                              src={social.icon}
                              class="has-inherited-colors w-full relative z-10 h-full text-white transition duration-300 group-hover/link:scale-110"
                              alt={social.label}
                            />
                          )}
                        </a>
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Team Members Section -->
  <AboutTeam />

  <!-- Join Us Section -->
  <section class="join-us-section">
    <div class="container">
      <div class="flex flex-col flex-wrap gap-6 overflow-x-hidden md:flex-nowrap lg:flex-row lg:items-center lg:justify-between">
        <div data-aos="fade-right-sm">
          {/* Subtitle */}
          <span class="bg-primary/5 border-secondary text-primary mb-2.5 inline-block rounded-full border px-5 py-px">
            Join With Us
          </span>
          {/* Main Title */}
          <h2 class="text-h3 max-w-lg">
            快速发展的公司寻求顶尖人才
          </h2>
        </div>
        <div
          data-aos="fade-right-sm"
          data-aos-delay="200"
          class="space-y-4 lg:max-w-lg xl:lg:max-w-2xl">
          {/* Description */}
          <p>
            成为比你自己更伟大的事业的一部分。我们正在革新商业咨询行业，我们正在寻找充满激情和才华的个人加入我们的团队。
          </p>
          {/* CTA Button */}
          <a
            href="/career"
            class="btn btn-text btn-text-primary text-base-sm mt-8 capitalize md:text-base inline-flex items-center">
            查看所有职位
            <svg class="h-4 w-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </div>
      </div>
      
      {/* Gallery Section with Images and Stats */}
      <div
        data-aos="fade-up-sm"
        data-aos-delay="300"
        class="grid grid-cols-1 gap-6 md:grid-cols-12 mt-12">
        {/* Left Image */}
        <div class="col-span-6 xl:col-span-7">
          <img
            src="/images/career/1.jpg"
            alt="Team collaboration"
            class="!h-60 !max-h-full w-full object-cover sm:!h-80 md:!h-full rounded-lg"
          />
        </div>
        {/* Right Image */}
        <div class="col-span-6 xl:col-span-5 xl:row-span-2">
          <img
            src="/images/career/2.jpg"
            alt="Office environment"
            class="!h-60 !max-h-full w-full object-cover sm:!h-80 md:!h-full rounded-lg"
          />
        </div>
        {/* Stats Section */}
        <div class="md:col-span-12">
          <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
            {/* Stat 1 */}
            <div class="bg-primary text-white p-8 rounded-lg text-center">
              <div class="flex items-center justify-center mb-4">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="text-4xl font-bold mb-2">200+</div>
              <div class="text-lg opacity-90">成功项目</div>
            </div>
            {/* Stat 2 */}
            <div class="bg-primary text-white p-8 rounded-lg text-center">
              <div class="flex items-center justify-center mb-4">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                </svg>
              </div>
              <div class="text-4xl font-bold mb-2">25+</div>
              <div class="text-lg opacity-90">年经验</div>
            </div>
            {/* Stat 3 */}
            <div class="bg-primary text-white p-8 rounded-lg text-center">
              <div class="flex items-center justify-center mb-4">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
              </div>
              <div class="text-4xl font-bold mb-2">10:1</div>
              <div class="text-lg opacity-90">服务投资回报率</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CallToAction />

  <Footer />
</Layout>

<style>

  /* Leadership Section */
  .leadership-section {
    padding: 80px 0;
    background: #f8fafc;
  }


  /* Join Us Section */
  .join-us-section {
    padding: 80px 0;
    background: #f8fafc;
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .container {
      padding: 0 2rem;
    }
  }

  @media (min-width: 1024px) {
    .container {
      padding: 0 3rem;
    }
  }

  /* Typography */
  .text-h3 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: #1a202c;
  }

  .text-primary {
    color: #024340;
  }

  .text-secondary {
    color: #036b66;
  }

  .bg-primary {
    background-color: #024340;
  }

  .bg-primary\/5 {
    background-color: rgba(2, 67, 64, 0.05);
  }

  .border-primary {
    border-color: #024340;
  }

  .border-secondary {
    border-color: #036b66;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .text-h3 {
      font-size: 2rem;
    }
    
    .leadership-section {
      padding: 60px 0;
    }
  }

  @media (max-width: 480px) {
    .text-h3 {
      font-size: 1.75rem;
    }
  }

  /* Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-text {
    background: transparent;
    color: #024340;
    border: 1px solid #024340;
  }

  .btn-text:hover {
    background: #024340;
    color: white;
    transform: translateY(-2px);
  }

  .btn-text-primary {
    color: #024340;
    border-color: #024340;
  }

  .btn-text-primary:hover {
    background: #024340;
    color: white;
  }

</style>
