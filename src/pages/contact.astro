---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Social from '../components/Social.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout title="联系我们 - MMC">
  <Navigation />
  
  <main class="min-h-screen bg-white">
    <!-- Contact Section -->
    <section class="relative pt-32 pb-20">
      <div class="container mx-auto px-4">
        <div class="flex flex-wrap items-start justify-between gap-x-20 gap-y-6 lg:flex-nowrap">
          <!-- Left Side - Contact Information -->
          <div class="lg:sticky lg:top-32 lg:max-w-lg">
            <!-- Subtitle -->
            <span class="bg-primary/5 border-secondary text-primary mb-2.5 inline-block rounded-full border px-5 py-px">
              联系我们
            </span>
            
            <!-- Title -->
            <h2 class="text-h3 text-inherit mb-6">
              联系我们获取更多信息
            </h2>
            
            <!-- Description -->
            <p class="mt-6 text-gray-600">
              无论您是在寻求专业协助，我们的专业团队都准备好为您提供全程支持。
            </p>
            
            <!-- Contact List -->
            <div class="mt-8 space-y-3">
              <!-- Phone -->
              <div class="flex items-center justify-start gap-x-4 py-1.5">
                <div class="bg-primary/15 flex h-12 w-12 shrink-0 items-center justify-center rounded-lg transition duration-300">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path
                      d="M14.9434 3.75C16.2155 4.09141 17.3755 4.76142 18.3068 5.69279C19.2382 6.62416 19.9082 7.78412 20.2496 9.05625"
                      stroke="#024340" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path
                      d="M14.166 6.64648C14.9311 6.84968 15.6289 7.25153 16.1887 7.8113C16.7485 8.37107 17.1503 9.06887 17.3535 9.83398"
                      stroke="#024340" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path
                      d="M8.67187 11.6998C9.44364 13.2935 10.7324 14.579 12.3281 15.3467C12.4458 15.4024 12.576 15.4265 12.7059 15.4167C12.8358 15.4068 12.9608 15.3633 13.0687 15.2904L15.4125 13.7248C15.516 13.6546 15.6357 13.6117 15.7603 13.6002C15.8849 13.5887 16.0104 13.609 16.125 13.6592L20.5125 15.5435C20.6625 15.6059 20.7877 15.7159 20.869 15.8565C20.9504 15.9971 20.9832 16.1606 20.9625 16.3217C20.8234 17.407 20.2937 18.4046 19.4723 19.1276C18.6509 19.8506 17.5943 20.2495 16.5 20.2498C13.1185 20.2498 9.87548 18.9065 7.48439 16.5154C5.0933 14.1243 3.75 10.8813 3.75 7.49979C3.75025 6.40553 4.1492 5.34886 4.87221 4.5275C5.59522 3.70613 6.59274 3.17635 7.67812 3.03729C7.83922 3.01659 8.00266 3.04943 8.14326 3.13074C8.28386 3.21206 8.39384 3.33733 8.45625 3.48729L10.3406 7.88416C10.3896 7.99699 10.4101 8.12013 10.4003 8.24275C10.3905 8.36537 10.3507 8.48369 10.2844 8.58729L8.71875 10.9685C8.64905 11.0762 8.60814 11.2 8.59993 11.328C8.59172 11.4561 8.61649 11.5841 8.67187 11.6998V11.6998Z"
                      stroke="#024340" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </div>
                <div class="space-y-px">
                  <div class="text-sm opacity-70">立即致电我们</div>
                  <p class="text-gray-900">+6011-27368039</p>
                </div>
              </div>
              
              <!-- Email -->
              <div class="flex items-center justify-start gap-x-4 py-1.5">
                <div class="bg-primary/15 flex h-12 w-12 shrink-0 items-center justify-center rounded-lg transition duration-300">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M21 5.25L12 13.5L3 5.25" stroke="#024340" stroke-width="1.5" stroke-linecap="round"
                      stroke-linejoin="round" />
                    <path
                      d="M3 5.25H21V18C21 18.1989 20.921 18.3897 20.7803 18.5303C20.6397 18.671 20.4489 18.75 20.25 18.75H3.75C3.55109 18.75 3.36032 18.671 3.21967 18.5303C3.07902 18.3897 3 18.1989 3 18V5.25Z"
                      stroke="#024340" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M10.3594 12L3.23438 18.5344" stroke="#024340" stroke-width="1.5" stroke-linecap="round"
                      stroke-linejoin="round" />
                    <path d="M20.7656 18.5344L13.6406 12" stroke="#024340" stroke-width="1.5" stroke-linecap="round"
                      stroke-linejoin="round" />
                  </svg>
                </div>
                <div class="space-y-px">
                  <div class="text-sm opacity-70">发送邮件</div>
                  <p class="text-gray-900">admin@mmcfin.com</p>
                </div>
              </div>
              
            </div>
            
            <!-- Social Media -->
            <div class="box-shadow-primary mt-8 w-fit space-y-4 rounded-lg bg-white p-8">
              <h3 class="text-base-sm font-primary font-normal text-inherit md:text-base">
                关注我们的社交媒体
              </h3>
              <Social 
                class="gap-2" 
                layout="modern" 
                list={[
                  {
                    enable: true,
                    label: "facebook",
                    icon: "/images/general-icon/facebook.svg",
                    url: "https://www.facebook.com/mmc"
                  },
                  {
                    enable: true,
                    label: "instagram", 
                    icon: "/images/general-icon/instagram.svg",
                    url: "https://www.instagram.com/mmc"
                  },
                  {
                    enable: true,
                    label: "linkedin",
                    icon: "/images/general-icon/linkedin.svg", 
                    url: "https://www.linkedin.com/company/mmc"
                  }
                ]}
              />
            </div>
          </div>
          
          <!-- Right Side - Office Location -->
          <div class="mt-10 w-full lg:mt-0 lg:max-w-2xl">
            <div class="space-y-0">
              <!-- Text Content -->
              <div class="bg-primary text-white p-6 md:p-8 rounded-t-lg">
                <h3 class="text-2xl font-bold mb-4 text-white">Headquarters</h3>
                <div class="prose-styles prose-p:mb-0 prose-p:mt-1.5 [&_*]:text-white">
                  <p>59.20, Exchange 106,</p>
                  <p>Tun Razak Exchange (TRX),</p>
                  <p>55188 Kuala Lumpur</p>
                </div>
              </div>
              
              <!-- Background Image -->
              <div class="relative">
                <img
                  src="/images/contact/MMCOffice.webp"
                  alt="MMC Office"
                  class="w-full h-64 md:h-80 object-cover rounded-b-lg"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Call to Action Section -->
    <CallToAction />
  </main>
  
  <Footer />
</Layout>

<style>
  .text-h3 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: #024340;
  }
  
  .bg-primary\/5 {
    background-color: rgba(2, 67, 64, 0.05);
  }
  
  .border-secondary {
    border-color: #B4A180;
  }
  
  .text-primary {
    color: #024340;
  }
  
  .bg-primary\/15 {
    background-color: rgba(2, 67, 64, 0.15);
  }
  
  .box-shadow-primary {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  .bg-primary\/60 {
    background-color: rgba(2, 67, 64, 0.60);
  }
  
  .text-base-sm {
    font-size: 0.875rem;
  }
  
  .prose-styles p {
    margin-bottom: 0;
    margin-top: 0.375rem;
  }
  
  .prose-styles * {
    color: white;
  }
</style>
