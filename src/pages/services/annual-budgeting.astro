  document.addEventListener("DOMContentLoaded", async () => {
    // @ts-ignore
    const AOS = await import("aos");
    
    AOS.init({
      duration: 500,
      easing: "ease-out",
      disable: "mobile", // Disable on mobile for better performance
      once: true, // Animate only once
      throttleDelay: 99,
      debounceDelay: 50,
    });
  });
</script>

