---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/ui/Navigation.astro";
import Footer from "../../components/ui/Footer.astro";
import FAQSection from "../../components/ui/FAQSection.astro";
import HowToSection from "../../components/ui/HowToSection.astro";
import AnswerBlock from "../../components/ui/AnswerBlock.astro";
import type { EnhancedContentData } from "../../types/content";

const contentData: EnhancedContentData = {
  // Existing fields
  title: "MMC Astro UI 组件展示中心",
  summary: "全面展示 MMC Astro 网站的所有 UI 组件，包括手风琴、文章卡片、商业表单、搜索功能、轮播组件、团队卡片和视频卡片等。",
  author: "MMC Financial",
  pubDate: new Date("2024-01-25"),
  tags: ["UI组件", "设计系统", "用户体验", "前端开发"],
  type: "技术展示",
  featured: true,
  
  // Enhanced SEO fields
  metaDescription: "探索MMC Astro网站的完整UI组件库，包括响应式设计、交互组件和专业表单。了解如何使用这些组件创建现代化的企业网站界面。",
  focusKeywords: ["UI组件", "Astro组件", "网站设计", "用户界面", "响应式设计"],
  
  // GEO fields
  schemaType: "HowTo",
  faqSections: [
    {
      question: "这些UI组件是否支持响应式设计？",
      answer: "是的，所有MMC Astro UI组件都采用响应式设计，能够在桌面、平板和移动设备上完美显示，确保最佳的用户体验。"
    },
    {
      question: "如何在项目中使用这些组件？",
      answer: "这些组件都是基于Astro框架开发的，可以直接导入到您的.astro文件中使用。每个组件都有清晰的Props接口定义，便于集成和定制。"
    },
    {
      question: "组件是否可以自定义样式？",
      answer: "可以，所有组件都支持通过class属性传入自定义CSS类名，同时遵循MMC品牌设计规范，确保视觉一致性。"
    },
    {
      question: "这些组件的浏览器兼容性如何？",
      answer: "组件支持所有现代浏览器，包括Chrome、Firefox、Safari和Edge的最新版本，确保广泛的用户覆盖。"
    }
  ],
  
  howToSteps: [
    {
      name: "选择合适的组件",
      text: "根据您的需求从组件库中选择合适的UI组件，每个组件都有详细的使用说明和示例代码。"
    },
    {
      name: "导入组件到项目",
      text: "在您的.astro文件中导入所需的组件，例如：import TeamCard from '../../components/ui/TeamCard.astro'。"
    },
    {
      name: "配置组件属性",
      text: "根据组件的Props接口定义，传入必要的数据和配置参数，确保组件正常工作。"
    },
    {
      name: "自定义样式和布局",
      text: "通过class属性添加自定义CSS类名，或修改组件内部样式以匹配您的设计需求。"
    },
    {
      name: "测试和优化",
      text: "在不同设备和浏览器上测试组件的显示效果和交互功能，确保最佳的用户体验。"
    }
  ],
  
  // E-E-A-T signals
  authorCredentials: ["前端开发专家", "UI/UX设计师", "Astro框架专业开发者"],
  sources: [
    "Astro官方文档和最佳实践",
    "现代Web设计规范",
    "MMC品牌设计指南"
  ]
};
---

<Layout title={contentData.title} contentData={contentData}>
  <Navigation />

  <main class="min-h-screen bg-gradient-to-br from-theme-light to-white pt-20">
    <article class="container mx-auto px-4 py-12">
      <header class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-bold text-primary mb-4">
          {contentData.title}
        </h1>
        <p class="text-xl text-text-default max-w-3xl mx-auto">
          {contentData.summary}
        </p>
        <div class="flex items-center justify-center space-x-4 mt-6">
          <span class="text-sm text-gray-500">作者：{contentData.author}</span>
          <span class="text-sm text-gray-500"
            >发布时间：{contentData.pubDate.toLocaleDateString("zh-CN")}</span
          >
        </div>
      </header>

      <div class="prose prose-lg max-w-4xl mx-auto">
        <!-- Answer-First Content Blocks for GEO Optimization -->
        <AnswerBlock 
          question="MMC Astro UI组件库包含哪些组件？"
          directAnswer="MMC Astro UI组件库包含7大类核心组件：手风琴组件、文章卡片、搜索表单、团队卡片、视频卡片、轮播组件和商业合作表单，所有组件都采用响应式设计并遵循MMC品牌规范。"
          detailedExplanation="这些组件涵盖了现代企业网站的主要功能需求，从内容展示到用户交互，从信息收集到视觉呈现，为开发者提供了完整的UI解决方案。"
        />
        
        <AnswerBlock 
          question="这些UI组件有什么特点？"
          directAnswer="MMC Astro UI组件具有响应式设计、品牌一致性、易于集成和高性能四大特点，使用深绿色(#024340)作为主色调，金色(#B4A180)作为强调色。"
          detailedExplanation="所有组件都基于现代设计理念开发，确保在不同设备上的最佳显示效果，同时保持MMC品牌的专业形象。"
        />

        <h2>欢迎来到 MMC Astro UI 组件展示中心</h2>
        <p>
          本页面将全面展示 MMC Astro 网站的所有 UI
          组件，这些组件都基于现代设计理念，采用 MMC
          品牌风格，为用户提供优秀的交互体验。
        </p>

        <div class="bg-primary/5 border border-primary/20 rounded-lg p-6 my-8">
          <h3 class="text-xl font-semibold text-primary mb-3">🎨 设计理念</h3>
          <p class="text-dark/80">
            所有组件都遵循 MMC 的品牌设计语言，使用深绿色 (#024340)
            作为主色调，金色 (#B4A180) 作为强调色，
            确保整个网站的一致性和专业性。
          </p>
        </div>

        <h2>1. 手风琴组件 (Accordion)</h2>
        <p>
          手风琴组件用于展示步骤流程或 FAQ
          内容，支持展开/收起交互，让用户能够有序地浏览信息。
        </p>

        <div class="my-8">
          <h3 class="text-lg font-semibold text-primary mb-4">服务流程展示</h3>
          <div class="bg-gray-50 p-6 rounded-lg">
            <div class="space-y-4">
              <div
                class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm"
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4">
                    <span class="text-2xl font-bold text-primary">01</span>
                    <span class="text-lg font-semibold text-primary"
                      >需求分析</span
                    >
                  </div>
                  <div
                    class="bg-primary w-8 h-8 rounded-full flex items-center justify-center"
                  >
                    <div class="w-4 h-4 bg-white rounded-sm"></div>
                  </div>
                </div>
              </div>

              <div
                class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm"
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4">
                    <span class="text-2xl font-bold text-primary">02</span>
                    <span class="text-lg font-semibold text-primary"
                      >方案设计</span
                    >
                  </div>
                  <div
                    class="bg-primary w-8 h-8 rounded-full flex items-center justify-center"
                  >
                    <div class="w-4 h-4 bg-white rounded-sm"></div>
                  </div>
                </div>
              </div>

              <div
                class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm"
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4">
                    <span class="text-2xl font-bold text-primary">03</span>
                    <span class="text-lg font-semibold text-primary"
                      >系统实施</span
                    >
                  </div>
                  <div
                    class="bg-primary w-8 h-8 rounded-full flex items-center justify-center"
                  >
                    <div class="w-4 h-4 bg-white rounded-sm"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <h2>2. 文章卡片组件 (ArticleCard)</h2>
        <p>
          文章卡片组件用于内容中心展示文章，支持多种内容类型、标签展示和作者信息。
        </p>

        <div class="my-8">
          <div class="grid md:grid-cols-2 gap-6">
            <div
              class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm hover:shadow-lg transition-shadow"
            >
              <div class="flex justify-between items-center mb-4">
                <span
                  class="bg-primary text-white text-xs font-medium inline-flex items-center px-3 py-1 rounded-full"
                >
                  <span class="mr-1">💼</span>
                  专业内容
                </span>
                <span class="text-sm text-gray-500">2024年1月25日</span>
              </div>

              <h3 class="mb-3 text-xl font-bold text-primary">
                财务规划的重要性
              </h3>
              <p class="mb-4 text-gray-600 leading-relaxed">
                深入探讨企业财务规划在现代商业环境中的关键作用，以及如何制定有效的财务策略来推动业务增长。
              </p>

              <div class="flex flex-wrap gap-2 mb-4">
                <span
                  class="bg-gray-100 text-primary px-2 py-1 rounded text-xs font-medium"
                  >财务规划</span
                >
                <span
                  class="bg-gray-100 text-primary px-2 py-1 rounded text-xs font-medium"
                  >企业管理</span
                >
                <span
                  class="bg-gray-100 text-primary px-2 py-1 rounded text-xs font-medium"
                  >预算控制</span
                >
              </div>

              <div class="flex justify-between items-center">
                <div class="flex items-center space-x-3">
                  <div
                    class="w-8 h-8 rounded-full bg-primary flex items-center justify-center"
                  >
                    <span class="text-white text-sm font-bold">M</span>
                  </div>
                  <span class="font-medium text-primary">MMC Financial</span>
                </div>
                <a
                  href="#"
                  class="inline-flex items-center font-medium text-primary hover:text-accent transition-colors"
                >
                  阅读更多
                  <svg
                    class="ml-2 w-4 h-4"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
                  </svg>
                </a>
              </div>
            </div>

            <div
              class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm hover:shadow-lg transition-shadow"
            >
              <div class="flex justify-between items-center mb-4">
                <span
                  class="bg-primary text-white text-xs font-medium inline-flex items-center px-3 py-1 rounded-full"
                >
                  <span class="mr-1">📊</span>
                  案例分析
                </span>
                <span class="text-sm text-gray-500">2024年1月20日</span>
              </div>

              <h3 class="mb-3 text-xl font-bold text-primary">
                预算优化策略指南
              </h3>
              <p class="mb-4 text-gray-600 leading-relaxed">
                学习如何通过科学的预算优化策略，提高企业运营效率，降低成本，实现利润最大化。
              </p>

              <div class="flex flex-wrap gap-2 mb-4">
                <span
                  class="bg-gray-100 text-primary px-2 py-1 rounded text-xs font-medium"
                  >预算优化</span
                >
                <span
                  class="bg-gray-100 text-primary px-2 py-1 rounded text-xs font-medium"
                  >成本控制</span
                >
                <span
                  class="bg-gray-100 text-primary px-2 py-1 rounded text-xs font-medium"
                  >效率提升</span
                >
              </div>

              <div class="flex justify-between items-center">
                <div class="flex items-center space-x-3">
                  <div
                    class="w-8 h-8 rounded-full bg-primary flex items-center justify-center"
                  >
                    <span class="text-white text-sm font-bold">M</span>
                  </div>
                  <span class="font-medium text-primary">MMC Financial</span>
                </div>
                <a
                  href="#"
                  class="inline-flex items-center font-medium text-primary hover:text-accent transition-colors"
                >
                  阅读更多
                  <svg
                    class="ml-2 w-4 h-4"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <h2>3. 搜索表单组件 (SearchForm)</h2>
        <p>搜索表单组件提供简洁的搜索界面，支持内容搜索功能。</p>

        <div class="my-8">
          <div
            class="max-w-md mx-auto bg-white p-6 rounded-lg border border-gray-200 shadow-sm"
          >
            <form class="flex items-center">
              <div class="relative w-full">
                <input
                  type="text"
                  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-3 pr-10"
                  placeholder="搜索内容..."
                  required
                />
                <div
                  class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none"
                >
                  <svg
                    class="w-4 h-4 text-gray-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </div>
              </div>
              <button
                type="submit"
                class="p-3 ms-2 text-sm font-medium text-white bg-primary rounded-lg border border-primary hover:bg-primary/90 focus:ring-4 focus:outline-none focus:ring-primary/20 transition-all duration-200"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </button>
            </form>
          </div>
        </div>

        <h2>4. 团队卡片组件 (TeamCard)</h2>
        <p>
          团队卡片组件用于展示团队成员信息，包括头像、职位、描述和社交媒体链接。
        </p>

        <div class="my-8">
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div
              class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm hover:shadow-lg transition-shadow"
            >
              <div class="flex flex-col sm:flex-row relative">
                <div class="flex-shrink-0 mb-4 sm:mb-0">
                  <div
                    class="w-20 h-20 rounded-full bg-gradient-to-br from-primary to-accent flex items-center justify-center border-2 border-primary"
                  >
                    <span class="text-white text-2xl font-bold">张</span>
                  </div>
                </div>

                <div class="flex flex-col justify-center sm:ml-6 flex-grow">
                  <h3 class="text-xl font-semibold text-primary mb-1">
                    张经理
                  </h3>
                  <p class="text-sm font-medium text-accent mb-2">财务顾问</p>
                </div>

                <a
                  href="#"
                  class="absolute right-0 top-0 p-2 bg-primary rounded-full hover:bg-primary/90 transition-colors"
                >
                  <svg
                    class="w-5 h-5 text-white"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                    ></path>
                  </svg>
                </a>
              </div>

              <div class="w-full h-[1px] bg-gray-200 my-6"></div>

              <div class="text-gray-600 leading-relaxed">
                拥有15年财务管理经验，专注于企业预算优化和利润提升。曾帮助多家企业实现30%以上的利润增长。
              </div>
            </div>

            <div
              class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm hover:shadow-lg transition-shadow"
            >
              <div class="flex flex-col sm:flex-row relative">
                <div class="flex-shrink-0 mb-4 sm:mb-0">
                  <div
                    class="w-20 h-20 rounded-full bg-gradient-to-br from-accent to-primary flex items-center justify-center border-2 border-primary"
                  >
                    <span class="text-white text-2xl font-bold">李</span>
                  </div>
                </div>

                <div class="flex flex-col justify-center sm:ml-6 flex-grow">
                  <h3 class="text-xl font-semibold text-primary mb-1">
                    李女士
                  </h3>
                  <p class="text-sm font-medium text-accent mb-2">高级分析师</p>
                </div>

                <a
                  href="#"
                  class="absolute right-0 top-0 p-2 bg-primary rounded-full hover:bg-primary/90 transition-colors"
                >
                  <svg
                    class="w-5 h-5 text-white"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                    ></path>
                  </svg>
                </a>
              </div>

              <div class="w-full h-[1px] bg-gray-200 my-6"></div>

              <div class="text-gray-600 leading-relaxed">
                专业的数据分析师，擅长财务建模和风险评估。在现金流管理和预算规划方面有丰富的实践经验。
              </div>
            </div>
          </div>
        </div>

        <h2>5. 视频卡片组件 (VideoCard)</h2>
        <p>
          视频卡片组件用于展示视频内容，支持 YouTube
          视频，包括缩略图、播放按钮和视频信息。
        </p>

        <div class="my-8">
          <div class="grid md:grid-cols-2 gap-6">
            <article
              class="p-6 bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-lg transition-all duration-200"
            >
              <div class="relative mb-4 overflow-hidden rounded-lg">
                <div class="block relative group">
                  <div
                    class="w-full h-48 bg-gradient-to-br from-primary/20 to-accent/20 flex items-center justify-center"
                  >
                    <div class="text-center">
                      <div
                        class="w-16 h-16 bg-primary rounded-full flex items-center justify-center shadow-lg mx-auto mb-2"
                      >
                        <svg
                          class="w-8 h-8 text-white ml-1"
                          fill="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path d="M8 5v14l11-7z"></path>
                        </svg>
                      </div>
                      <p class="text-sm text-gray-600">视频缩略图</p>
                    </div>
                  </div>
                  <div
                    class="absolute bottom-2 right-2 bg-black bg-opacity-80 text-white text-xs px-2 py-1 rounded"
                  >
                    15:30
                  </div>
                </div>
              </div>

              <div class="space-y-3">
                <h3
                  class="font-semibold text-lg text-primary leading-tight hover:text-accent transition-colors"
                >
                  企业预算管理入门指南
                </h3>

                <p class="text-gray-600 text-sm leading-relaxed">
                  本视频将为您详细介绍企业预算管理的基础知识和实践技巧，帮助您建立科学的预算管理体系。
                </p>

                <div
                  class="flex items-center justify-between text-xs text-gray-500 pt-2 border-t border-gray-100"
                >
                  <span class="flex items-center">
                    <svg
                      class="w-4 h-4 mr-1"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
