---
// VideoCard component for MMC Astro
// Based on SparkAstro's VideoCard component but adapted for MMC's style

export interface Props {
  title: string;
  description: string;
  videoId: string;
  duration?: string;
  publishDate?: string;
  views?: string;
}

const { title, description, videoId, duration, publishDate, views } = Astro.props;
const thumbnailUrl = `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg`;
const videoUrl = `https://www.youtube.com/watch?v=${videoId}`;
---

<article class="p-6 bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-lg transition-all duration-200">
  <div class="relative mb-4 overflow-hidden rounded-lg">
    <a href={videoUrl} target="_blank" rel="noopener noreferrer" class="block relative group">
      <img 
        src={thumbnailUrl} 
        alt={title}
        class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
      <!-- YouTube播放按钮覆盖层 -->
      <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-40 group-hover:bg-opacity-30 transition-all duration-300">
        <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center shadow-lg">
          <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
      </div>
      <!-- 视频时长标签 -->
      {duration && (
        <div class="absolute bottom-2 right-2 bg-black bg-opacity-80 text-white text-xs px-2 py-1 rounded">
          {duration}
        </div>
      )}
    </a>
  </div>
  
  <div class="space-y-3">
    <h3 class="font-semibold text-lg text-primary leading-tight hover:text-accent transition-colors">
      <a href={videoUrl} target="_blank" rel="noopener noreferrer">
        {title}
      </a>
    </h3>
    
    <p class="text-text-default text-sm leading-relaxed line-clamp-3">
      {description}
    </p>
    
    {(publishDate || views) && (
      <div class="flex items-center justify-between text-xs text-gray-500 pt-2 border-t border-gray-100">
        {publishDate && (
          <span class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            {publishDate}
          </span>
        )}
        {views && (
          <span class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            {views}
          </span>
        )}
      </div>
    )}
    
    <div class="pt-3">
      <a 
        href={videoUrl}
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center text-primary hover:text-accent font-medium text-sm transition-colors"
      >
        观看视频
        <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</article>

<style>
.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>
