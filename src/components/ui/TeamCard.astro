---
// TeamCard component for MMC Astro
// Based on SparkAstro's TeamCard component but adapted for MMC's style

import Card from "./Card.astro";

interface Props {
  pic: string;
  name: string;
  role: string;
  description: string;
  link?: string;
}

const { pic, name, role, description, link } = Astro.props;
---

<Card isUnderline={true} className="hover:shadow-lg transition-shadow duration-300">
  <div class="p-6">
    <div class="flex flex-col sm:flex-row relative">
      <div class="flex-shrink-0 mb-4 sm:mb-0">
        <img 
          src={pic} 
          alt={name} 
          class="w-20 h-20 rounded-full object-cover border-2 border-primary"
        />
      </div>
      
      <div class="flex flex-col justify-center sm:ml-6 flex-grow">
        <h3 class="text-xl font-semibold text-primary mb-1">{name}</h3>
        <p class="text-sm font-medium text-accent mb-2">{role}</p>
      </div>
      
      {link && (
        <a 
          href={link} 
          class="absolute right-0 top-0 p-2 bg-primary rounded-full hover:bg-primary/90 transition-colors"
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`查看 ${name} 的 LinkedIn 资料`}
        >
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      )}
    </div>
    
    <div class="w-full h-[1px] bg-gray-200 my-6"></div>
    
    <div class="text-text-default leading-relaxed">
      {description}
    </div>
  </div>
</Card>
