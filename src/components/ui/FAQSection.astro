---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQItem[];
  title?: string;
  class?: string;
}

const { faqs, title = "Frequently Asked Questions", class: className = "" } = Astro.props;
---

<section class={`faq-section ${className}`} itemscope itemtype="https://schema.org/FAQPage">
  <h2 class="text-2xl font-bold text-primary mb-6">{title}</h2>
  <div class="space-y-6">
    {faqs.map((faq) => (
      <div class="faq-item border-b border-gray-200 pb-4" itemscope itemtype="https://schema.org/Question">
        <h3 class="text-lg font-semibold text-text-default mb-2" itemprop="name">
          {faq.question}
        </h3>
        <div itemprop="acceptedAnswer" itemscope itemtype="https://schema.org/Answer">
          <p class="text-text-default leading-relaxed" itemprop="text">
            {faq.answer}
          </p>
        </div>
      </div>
    ))}
  </div>
</section>