---

{testimonialData.enable && (
  <section class="overflow-hidden">
    <div class="bg-theme-light py-16 md:py-28">
      <div class="container overflow-x-hidden">
        <div class="flex flex-wrap items-center justify-between gap-6 lg:flex-nowrap">
          <div class="lg:max-w-2xl">
            {testimonialData.subtitle && (
              <span class="bg-primary/5 border-secondary text-primary mb-2.5 inline-block rounded-full border px-5 py-px">
                {testimonialData.subtitle}
              </span>
            )}
            {testimonialData.title && (
              <h2 class="text-h3 text-inherit">
                {testimonialData.title}
              </h2>
            )}
          </div>
          {testimonialData.cta_btn && testimonialData.cta_btn.enable && (
            <div>
              <a
                class="relative flex items-center"
                href={testimonialData.cta_btn.url}>
                <span class="btn btn-outline btn-outline-primary has-text-flip-animation before:btn before:btn-outline-primary after:btn after:btn-outline-primary">
                  {testimonialData.cta_btn.label}
                </span>
                <span class="icon">
                  <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                </span>
              </a>
            </div>
          )}
        </div>
      </div>
      <div class="relative">
        <div
          class="testimonial-gradient-bg"
          style="--accent-color: #3b82f6;"
          aria-hidden="true"
        />
        <div class="relative mt-12 flex overflow-x-hidden md:mt-16">
          <div
            class="marquee marquee-pause-on-hover"
            style={`--marquee-elements:${testimonialData.list.length};--marquee-element-width-responsive:calc(${testimonialData.marquee.element_width_in_small_devices} / var(--marquee-elements) * ${testimonialData.list.length});--marquee-element-width:calc(${testimonialData.marquee.element_width} / var(--marquee-elements) * ${testimonialData.list.length});--marquee-duration:${testimonialData.marquee.duration};--marquee-reverse:${testimonialData.marquee.reverse};`}>
            <div class="marquee-content flex items-stretch">
              {testimonialData.list.map((item) => (
                <div class="min-w-[var(--marquee-element-width-responsive)] px-4 md:min-w-[var(--marquee-element-width)]">
                  <div class="relative flex w-full bg-white p-6 min-h-full">
                    <img
                      class="pointer-events-none absolute top-0 left-0 h-56 w-48"
                      width="119"
                      height="224"
                      src="/images/testimonial/testi-line.svg"
                      alt="pattern"
                    />
                    <div class="flex flex-col justify-between space-y-4 md:space-y-8">
                      {item.content && (
                        <div class="space-y-8 md:space-y-16">
                          {item.customer && (
                            <div class="flex flex-wrap-reverse items-center justify-between gap-5 opacity-70">
                              <div class="flex items-center gap-3">
                                {item.customer.company.logo && (
                                  <img
                                    class="h-6 w-6"
                                    width="24"
                                    height="24"
                                    src={item.customer.company.logo}
                                    alt={item.customer.company.name}
                                  />
                                )}
                                {item.customer.company.name && (
                                  <div class="text-dark whitespace-nowrap">
                                    {item.customer.company.name}
                                  </div>
                                )}
                              </div>
                            </div>
                          )}
                          <div class="prose-styles">
                            <p>{item.content}</p>
                          </div>
                        </div>
                      )}
                      {item.customer && (
                        <div class="flex flex-wrap-reverse items-end justify-between gap-x-2 gap-y-10">
