                            <img
                              class="h-12 w-12 rounded-full"
                              width="48"
                              height="48"
                              src={item.customer.image}
                              alt={item.customer.name}
                            />
                            <div>
                              {item.customer.name && (
                                <div class="text-dark">
                                  {item.customer.name}
                                </div>
                              )}
                              {item.customer.role && (
                                <p class="text-light text-sm">
                                  {item.customer.role}
                                </p>
                              )}
                            </div>
                          </div>
                          <div class="bg-theme-light flex items-center gap-2 rounded-full px-3 py-1.5">
