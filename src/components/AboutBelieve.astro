            <h2
              class="text-h3-md md:text-h3 font-bold leading-tight text-dark break-words"
              set:html={bannerData.title}
            />
          )}
        </div>
        {bannerData.description && (
          <div class="flex-1 max-w-2xl lg:flex lg:items-center">
            <p
              set:html={bannerData.description}
