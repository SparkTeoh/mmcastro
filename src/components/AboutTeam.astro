---
// AboutTeam component - Team section matching the design from the image
// Based on AstroBackup OurTeam section design
---

<section>
  <div class="container">
    <div class="flex flex-wrap items-center justify-between gap-6 overflow-x-hidden lg:flex-nowrap">
      <div class="lg:max-w-2xl" data-aos="fade-right-sm">
        {/* Subtitle */}
        <span class="bg-primary/5 border-secondary text-primary mb-2.5 inline-block rounded-full border px-5 py-px">
          核心团队
        </span>
        {/* Main Title */}
        <h2 class="text-h3 text-inherit">
          汇聚多元背景的资深专家
        </h2>
      </div>
    </div>
    
    {/* Team Members Grid */}
    <div class="mt-8 grid gap-6 md:grid-cols-2 lg:mt-16 lg:grid-cols-4">
      {/* Spark Liang - Managing Director */}
      <div 
        class="group after:from-primary/80 after:via-primary/30 to-primary/0 relative overflow-hidden rounded-xl via-10% after:absolute after:inset-0 after:z-10 after:bg-gradient-to-t after:transition-opacity"
        data-aos="fade-up-sm"
        data-aos-delay="0"
      >
        <img
          src="/images/about-us/team/Spark.webp"
          alt="Spark Liang"
          class="w-full rounded-xl object-cover !h-[25.25rem]"
        />
        <div class="absolute bottom-0 left-0 z-20 w-full p-8 text-white transition-all duration-300 md:-bottom-14 group-hover:md:bottom-0">
          <h3 class="text-lg/snug text-inherit opacity-90">Spark Liang</h3>
          <p class="mt-2 text-sm text-inherit opacity-90">Managing Director</p>
        </div>
      </div>
      
      {/* Summer Oh - Operation Manager */}
      <div 
        class="group after:from-primary/80 after:via-primary/30 to-primary/0 relative overflow-hidden rounded-xl via-10% after:absolute after:inset-0 after:z-10 after:bg-gradient-to-t after:transition-opacity"
        data-aos="fade-up-sm"
        data-aos-delay="100"
      >
        <img
          src="/images/about-us/team/summer 1.webp"
          alt="Summer Oh"
          class="w-full rounded-xl object-cover !h-[25.25rem]"
        />
        <div class="absolute bottom-0 left-0 z-20 w-full p-8 text-white transition-all duration-300 md:-bottom-14 group-hover:md:bottom-0">
          <h3 class="text-lg/snug text-inherit opacity-90">Summer Oh</h3>
          <p class="mt-2 text-sm text-inherit opacity-90">Operation Manager</p>
        </div>
      </div>
      
      {/* Jing Er Lim - Business Development Manager */}
      <div 
        class="group after:from-primary/80 after:via-primary/30 to-primary/0 relative overflow-hidden rounded-xl via-10% after:absolute after:inset-0 after:z-10 after:bg-gradient-to-t after:transition-opacity"
        data-aos="fade-up-sm"
        data-aos-delay="200"
      >
        <img
          src="/images/about-us/team/jinger.webp"
          alt="Jing Er Lim"
          class="w-full rounded-xl object-cover !h-[25.25rem]"
        />
        <div class="absolute bottom-0 left-0 z-20 w-full p-8 text-white transition-all duration-300 md:-bottom-14 group-hover:md:bottom-0">
          <h3 class="text-lg/snug text-inherit opacity-90">Jing Er Lim</h3>
          <p class="mt-2 text-sm text-inherit opacity-90">Business Development Manager</p>
        </div>
      </div>
      
      {/* Kaelyn Tan - Business Consultant */}
      <div 
        class="group after:from-primary/80 after:via-primary/30 to-primary/0 relative overflow-hidden rounded-xl via-10% after:absolute after:inset-0 after:z-10 after:bg-gradient-to-t after:transition-opacity"
        data-aos="fade-up-sm"
        data-aos-delay="300"
      >
        <img
          src="/images/about-us/team/Kaelyn.webp"
          alt="Kaelyn Tan"
          class="w-full rounded-xl object-cover !h-[25.25rem]"
        />
        <div class="absolute bottom-0 left-0 z-20 w-full p-8 text-white transition-all duration-300 md:-bottom-14 group-hover:md:bottom-0">
          <h3 class="text-lg/snug text-inherit opacity-90">Kaelyn Tan</h3>
          <p class="mt-2 text-sm text-inherit opacity-90">Business Consultant</p>
        </div>
      </div>
    </div>
  </div>
</section>
