---
// MMC Astro 文章模板 - SEO & GEO 优化版
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/ui/Navigation.astro";
import Footer from "../components/ui/Footer.astro";
import FAQSection from "../components/ui/FAQSection.astro";
import AnswerBlock from "../components/ui/AnswerBlock.astro";
import type { EnhancedContentData } from "../types/content";

const contentData: EnhancedContentData = {
  // === 基础字段（必填） ===
  title: "您的文章标题（30-60字符）",
  summary: "文章摘要，简洁描述文章主要内容（120-160字符）",
  author: "MMC Financial",
  pubDate: new Date('2024-01-20'),
  tags: ['财务规划', '企业管理', '预算控制'], // 3-5个相关标签
  type: '专业内容',
  featured: false,
  
  // === SEO 优化字段 ===
  metaDescription: "专门为搜索引擎优化的描述，包含关键词和价值主张（120-160字符）",
  focusKeywords: ["主要关键词", "次要关键词", "长尾关键词"],
  
  // === GEO 优化字段 ===
  schemaType: "Article",
  faqSections: [
    {
      question: "用户常问的第一个问题？",
      answer: "直接、完整的答案，适合AI提取和引用。确保答案能够独立理解，不依赖上下文。"
    },
    {
      question: "用户常问的第二个问题？",
      answer: "另一个直接、完整的答案。包含具体的数据或实例会更有说服力。"
    }
  ],
  
  // === E-E-A-T 信号字段 ===
  authorCredentials: ["18年财务规划经验", "500+成功案例", "马来西亚注册财务顾问"],
  sources: [
    "马来西亚中小企业发展银行财务管理指南",
    "亚洲企业财务规划最佳实践研究报告",
    "MMC Financial内部客户成功案例分析"
  ]
};
---

<Layout title={contentData.title} contentData={contentData}>
  <Navigation />
  
  <main class="min-h-screen bg-gradient-to-br from-theme-light to-white pt-20">
    <article class="container mx-auto px-4 py-12" itemscope itemtype="https://schema.org/Article">
      <header class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-bold text-primary mb-4" itemprop="headline">
          {contentData.title}
        </h1>
        <p class="text-xl text-text-default max-w-3xl mx-auto" itemprop="description">
          {contentData.summary}
        </p>
        <div class="flex items-center justify-center space-x-4 mt-6">
          <span class="text-sm text-gray-500">作者：<span itemprop="author">{contentData.author}</span></span>
          <span class="text-sm text-gray-500">
            发布时间：<time itemprop="datePublished" datetime={contentData.pubDate.toISOString()}>
              {contentData.pubDate.toLocaleDateString("zh-CN")}
            </time>
          </span>
        </div>
      </header>

      <div class="prose prose-lg max-w-4xl mx-auto">
        <!-- Answer-First 内容块 - GEO优化的核心 -->
        <AnswerBlock 
          question="这篇文章的核心问题是什么？"
          directAnswer="在这里提供直接、完整的答案。这个答案应该能够被AI系统轻松提取和引用。"
          detailedExplanation="在这里提供更详细的解释，包含背景信息、实例和深入分析。"
        />
        
        <AnswerBlock 
          question="为什么这个话题很重要？"
          directAnswer="解释这个话题的重要性和价值。使用具体的数据或统计信息来支持您的观点。"
          detailedExplanation="提供更多的背景信息和实际应用场景。"
        />

        <!-- 主要内容部分 -->
        <h2>主要章节标题</h2>
        <p>
          在这里编写您的主要内容。确保使用清晰的段落结构，每个段落专注于一个主要观点。
          使用具体的例子和数据来支持您的论点。
        </p>

        <!-- 使用列表来提高可读性 -->
        <h3>关键要点</h3>
        <ul>
          <li><strong>要点1</strong>：详细说明第一个要点</li>
          <li><strong>要点2</strong>：详细说明第二个要点</li>
          <li><strong>要点3</strong>：详细说明第三个要点</li>
        </ul>

        <!-- 使用表格展示数据 -->
        <h3>数据对比</h3>
        <table class="w-full border-collapse border border-gray-300">
          <thead>
            <tr class="bg-gray-100">
              <th class="border border-gray-300 px-4 py-2">项目</th>
              <th class="border border-gray-300 px-4 py-2">数值</th>
              <th class="border border-gray-300 px-4 py-2">说明</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border border-gray-300 px-4 py-2">数据项1</td>
              <td class="border border-gray-300 px-4 py-2">值1</td>
              <td class="border border-gray-300 px-4 py-2">说明1</td>
            </tr>
            <tr>
              <td class="border border-gray-300 px-4 py-2">数据项2</td>
              <td class="border border-gray-300 px-4 py-2">值2</td>
              <td class="border border-gray-300 px-4 py-2">说明2</td>
            </tr>
          </tbody>
        </table>

        <!-- FAQ部分 - GEO优化的重要组成部分 -->
        {contentData.faqSections && (
          <FAQSection 
            faqs={contentData.faqSections} 
            title="常见问题解答"
            class="my-12"
          />
        )}
        
        <!-- E-E-A-T信号展示 -->
        <div class="bg-gray-50 p-6 rounded-lg my-8">
          <h3 class="text-lg font-semibold text-primary mb-4">专业资质与参考资料</h3>
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <h4 class="font-medium text-gray-800 mb-2">作者专业认证</h4>
              <ul class="text-sm text-gray-600 space-y-1">
                {contentData.authorCredentials?.map(credential => (
                  <li>• {credential}</li>
                ))}
              </ul>
            </div>
            <div>
              <h4 class="font-medium text-gray-800 mb-2">权威参考来源</h4>
              <ul class="text-sm text-gray-600 space-y-1">
                {contentData.sources?.map(source => (
                  <li>• {source}</li>
                ))}
              </ul>
            </div>
          </div>
        </div>

        <!-- 结论部分 -->
        <h2>总结</h2>
        <div class="bg-gradient-to-r from-primary/5 to-accent/5 border border-primary/20 rounded-lg p-6 my-8">
          <p class="text-dark/80 leading-relaxed">
            在这里总结文章的主要观点和价值。重申核心信息，并提供明确的行动建议。
          </p>
          
          <div class="mt-6 text-center">
            <a href="/contact" class="inline-flex items-center bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary/90 transition-colors font-medium">
              联系我们获取专业咨询
              <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<!-- 
使用说明：
1. 复制此模板到 src/pages/content/ 目录
2. 重命名为您的文章文件名（如：financial-planning-guide.astro）
3. 更新 contentData 中的所有字段
4. 替换模板内容为您的实际内容
5. 确保所有Answer-First块都有实际的问题和答案
6. 验证FAQ部分包含用户真正关心的问题
7. 检查E-E-A-T信号是否准确反映您的专业背景
-->